<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 article-show">
  <header class="intro-header" style="background-image: url('<%= @article.images.first.picture %>')">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <div class="post-heading">
            <h1><%= @article.title %></h1>
            <h2 class="subheading"></h2>
            <span class="meta">Posted by <%= link_to @article.company.name, company_path(@article.company) %> on <%= l(@article.time_show, format: :long) %></span>
          </div>
        </div>
      </div>
    </div>
  </header>
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <%= @article.content.html_safe %>
        </div>
      </div>
    </div>
  </article>
</div>
