<% articles.each do |article| %>
  <div class="row topmargin-sm clearfix">
    <div class="col-xs-12 bottommargin-sm">
      <div class="ipost clearfix">
        <div class="row clearfix">
          <div class="col-sm-4">
            <div class="entry-image">
              <%= link_to image_tag(article.images.first.picture), company_article_path(company, article) %>
            </div>
          </div>
          <div class="col-sm-8">
            <div class="entry-title">
              <h4><%= link_to article.title.html_safe,
                company_article_path(company, article) %>
              </h4>
            </div>
            <ul class="entry-meta clearfix">
              <li><i class="icon-calendar3"></i><%= l(article.time_show, format: :long) %></li>
              <li>
                <a href="blog-single.html#comments">
                <i class="icon-comments"></i> 13</a>
              </li>
              <li><a href="#"><i class="icon-camera-retro"></i></a></li>
            </ul>
            <div class="entry-content">
              <p><%= article.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
