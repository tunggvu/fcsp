<div class="btn-group btn-filter">
  <button type="button" class="btn btn-default dropdown-toggle button-show-filter"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fa fa-filter" aria-hidden="true"></i>
  </button>
  <div class="dropdown-menu filter" data-filter="users.id"
    data-model="candidate">
    <ul>
      <li>
        <button class="button-sort sortAlpha" data-sort-by="ASC">
          <%= t "employer.sortaz" %>
        </button>
      </li>
      <li>
        <button class="button-sort sortAlpha" data-sort-by="DESC">
          <%= t "employer.sortza" %>
        </button>
      </li>
      <hr />
      <li>
        <button data-toggle="collapse" data-target="#demo"
          class="button-sort button-show-value">
          <%= t "employer.sortvalue" %>
        </button>
        <div id="demo" class="collapse in value-sort">
          <div class="link">
            <a class="checkall"><%= t "employer.checkall" %></a>
            - <a  class="delete"><%= t "employer.delete" %></a>
          </div>
          <div id="imaginary_container">
            <div class="input-group stylish-input-group">
              <input type="text" class="form-control search-user-filter"
                placeholder="Search" >
              <span class="input-group-addon">
                <button type="submit" disabled>
                  <span class="glyphicon glyphicon-search"></span>
                </button>
              </span>
            </div>
          </div>
          <div class="list-item-value">
            <% object.candidates.each_with_index do |candidate, index| %>
              <div class="checkbox">
                <input id="checkbox-name-<%= index + 1 %>"
                  data-list-id="<%= candidate.user.id %>" type="checkbox"
                  class="styled checkboxitem list-user-filter" checked>
                <label for="checkbox-name-<%= index + 1 %>" class="label-user-name">
                  <%= candidate.user_name %>
                </label>
              </div>
            <% end %>
          </div>
        </div>
      </li>
      <li class="button-direct">
        <button type="button" class="btn btn-primary btn-ok btn-sm">
          <%= t "employer.ok" %>
        </button>
        <button type="button" class="btn btn-default btn-cancel btn-sm">
          <%= t "employer.cancel" %>
        </button>
      </li>
    </ul>
  </div>
</div>
