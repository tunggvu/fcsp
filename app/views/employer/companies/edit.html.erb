<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h3 class="company-info"><%= t ".company_info" %></h3>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div id="wizard" class="form_wizard wizard_horizontal">
          <ul class="wizard_steps">
            <li>
              <a href="#step-1">
                <span class="step_no">1</span>
                <span class="step_descr">
                  <small><%= t ".edit_company_info" %></small>
                </span>
              </a>
            </li>
            <li>
              <a href="#step-2">
                <span class="step_no">2</span>
                <span class="step_descr">
                  <small><%= t ".manage_members" %></small>
                </span>
              </a>
            </li>
            <li>
              <a href="#step-3">
                <span class="step_no">3</span>
                <span class="step_descr">
                  <small><%= t ".manage_images" %></small>
                </span>
              </a>
            </li>
            <li>
              <a href="#step-4">
                <span class="step_no">4</span>
                <span class="step_descr">
                  <small><%= t ".manage_accounts" %></small>
                </span>
              </a>
            </li>
          </ul>
          <div id="step-1">
            <%= render "edit_company_info", address: @address, company: @company, industries: @industries %>
          </div>
          <div id="step-2">
          </div>
          <div id="step-3">
          </div>
          <div id="step-4">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
