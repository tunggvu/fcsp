<div class="static-main-body">
  <%= form_for [:employer, company],  html: {class: "form-horizontal form-label-left",
    id: "edit_company_info"} do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "control-label col-md-3 col-sm-3 col-xs-12" do %>
        <%= t ".name" %><span class="required">*</span>
      <% end %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, class: "form-control col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :introduction, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :introduction, class: "form-control col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :website, class: "control-label col-md-3 col-sm-3 col-xs-12" do %>
        <%= t ".website" %><span class="required">*</span>
      <% end %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :website, class: "form-control col-md-7 col-xs-12" %>
      </div>
    </div>
    <%= render "address_fields", f: f, address: address %>
    <div class="form-group">
      <%= f.label :founder, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :founder, class: "form-control col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :country, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :country, class: "form-control col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :company_size, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.number_field :company_size, class: "form-control col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :founder_on, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.date_field :founder_on, class: "form-control col-md-7 col-xs-12" %>
      </div>
    </div>
    <%= render "industry_fields", f: f, industries: industries %>
    <%= render "no_load_data", f: f %>
  <% end %>
</div>
