<div class="form-group">
  <%= f.label :industry, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
  <div class="selection">
    <ul class="collection-wrapper">
      <%= f.collection_check_boxes :industry_ids, industries,
        :id, :name do |industry| %>
        <li>
          <%= industry.check_box %>
          <%= industry.text %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="clearfix"></div>
