<div class="postcontent nobottommargin col_last clearfix">
  <div class="x_panel">
    <div class="x_title">
      <h2><%= t ".team_introduction_recruitment" %></h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content list-team-introduction"><br>
      <% (1..3).each do |n| %>
        <div class="row">
          <button class="button button_team_introduction_<%= n %>">
            <%= t ".team_introduction_#{n}" %>
          </button>
          <div class="row team-introduction-<%= n %>">
            <%= render "form", n: n, team_introduction: @team_introduction %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
