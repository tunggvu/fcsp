<div id="edit-introduction-modal" class="modal fade course-member" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content modal-content-info-user">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".edit_introduction" %></h4>
      </div>
      <%= simple_form_for @info_user, remote: :true,
        html: {id: "edit-introduction-form"} do |f| %>
        <div class="modal-body">
          <%= f.input :introduce, as: :text, placeholder: t(".introduce_placeholder"),
            class: "sm-form-control modal-txta",
            rows: Settings.info_users.introduction_form_rows %>
        </div>
        <div class="modal-footer modal-footer-info-user">
          <%= f.submit t(".update_button"), class:"btn btn-primary",
            id: "btn-edit-introduce" %>
          <%= button_tag t(".cancel_button"), class:"btn btn-default",
             data: {dismiss:"modal"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
