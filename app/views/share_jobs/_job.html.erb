<div class="entry clearfix">
  <div class="entry-image">
    <%= link_to job, data:{lightbox: "image"} do %>
      <%= load_image_job job %>
    <% end %>
  </div>
  <div class="entry-c">
    <div class="entry-title">
      <h2>
        <%= link_to job.title, job_path(job) %>
      </h2>
      <ul class="entry-meta clearfix">
        <li>
          <i class="icon-calendar3">
            <%= I18n.localize job.created_at, format: :long %>
          </i>
        </li>
        <li>
          <i class="icon-user">
            <%= link_to job.company_name, company_path(job.company) %>
          </i>
        </li>
        <li>
          <a href="#"><i class="icon-comments"></i> 13</a>
        </li>
        <% if user.is_user? current_user %>
          <li>
            <% if shared_job? job %>
              <%= link_to t(".unshare"), "#", class: "icon-remove unshare-job", data: {id: job.id} %>
            <% else %>
              <%= link_to t(".share"), "#", class: "icon-share share-job", data: {id: job.id} %>
            <% end %>
          </li>
        <% end %>
      </ul>
      <div class="entry-content">
        <div class="clearfix"></div>
        <p><b><%= t ".type_of_candidates" %></b> <%= job.type_of_candidates %></p>
        <p><%= job.describe.truncate_words Settings.jobs.words_count %></p>
        <%= link_to t(".read_more"), job, class: "more-link" %>
      </div>
    </div>
  </div>
</div>
